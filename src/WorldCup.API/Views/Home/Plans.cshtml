@{
    ViewData["Title"] = "Pricing Plans";
}

<!-- Hero Section -->
<section class="hero-section bg-dark text-white py-5">
    <div class="container py-5 text-center">
        <h1 class="display-4 fw-bold mb-3">
            <i class="bi bi-credit-card text-warning"></i>
            Pricing Plans
        </h1>
        <p class="lead mb-0">
            Choose the plan that fits your needs. All plans include access to our comprehensive World Cup data.
        </p>
    </div>
</section>

<!-- Pricing Cards Section -->
<section class="pricing-section py-5">
    <div class="container py-5">
        <div class="row g-4 justify-content-center">
            <!-- Free Plan -->
            <div class="col-lg-4 col-md-6">
                <div class="card border-0 shadow h-100">
                    <div class="card-body p-4 d-flex flex-column">
                        <div class="text-center mb-4">
                            <h3 class="card-title fw-bold mb-3">Free</h3>
                            <div class="display-4 fw-bold mb-2">
                                $0
                                <small class="fs-6 text-muted fw-normal">/month</small>
                            </div>
                            <p class="text-muted">Perfect for testing and small projects</p>
                        </div>
                        
                        <ul class="list-unstyled mb-4 flex-grow-1">
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                <strong>500</strong> requests per day
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                <strong>10</strong> requests per minute
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                <strong>1</strong> API key
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                REST API access (basic endpoints)
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                Community support
                            </li>
                            <li class="mb-3 text-muted">
                                <i class="bi bi-x-circle me-2"></i>
                                Priority support
                            </li>
                        </ul>
                        
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <button class="btn btn-outline-primary btn-lg w-100" disabled>
                                <i class="bi bi-check-lg"></i> Current Plan
                            </button>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg w-100">
                                <i class="bi bi-person-plus"></i> Get Started
                            </a>
                        }
                    </div>
                </div>
            </div>
            
            <!-- Premium Plan -->
            <div class="col-lg-4 col-md-6">
                <div class="card border-primary border-3 shadow-lg h-100 position-relative">
                    <div class="position-absolute top-0 start-50 translate-middle">
                        <span class="badge bg-primary px-3 py-2 rounded-pill">
                            <i class="bi bi-star-fill"></i> MOST POPULAR
                        </span>
                    </div>
                    <div class="card-body p-4 d-flex flex-column">
                        <div class="text-center mb-4 mt-3">
                            <h3 class="card-title fw-bold mb-3">Premium</h3>
                            <div class="display-4 fw-bold mb-2">
                                $9.99
                                <small class="fs-6 text-muted fw-normal">CAD/month</small>
                            </div>
                            <p class="text-muted">Ideal for production applications</p>
                        </div>
                        
                        <ul class="list-unstyled mb-4 flex-grow-1">
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                <strong>25,000</strong> requests per day
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                <strong>100</strong> requests per minute
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                <strong>3</strong> API keys
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                All REST API endpoints
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                Email support
                            </li>
                        </ul>
                        
                        <a href="mailto:afsvieira@afsvieira.com?subject=Premium Plan Inquiry" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-envelope"></i> Contact for Upgrade
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Pro Plan -->
            <div class="col-lg-4 col-md-6">
                <div class="card border-0 shadow h-100 bg-dark text-white">
                    <div class="card-body p-4 d-flex flex-column">
                        <div class="text-center mb-4">
                            <h3 class="card-title fw-bold mb-3">Pro</h3>
                            <div class="display-4 fw-bold mb-2">
                                $49.99
                                <small class="fs-6 text-muted fw-normal">CAD/month</small>
                            </div>
                            <p class="text-muted">Enterprise-grade with premium support</p>
                        </div>
                        
                        <ul class="list-unstyled mb-4 flex-grow-1">
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-warning me-2"></i>
                                <strong>250,000</strong> requests per day
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-warning me-2"></i>
                                <strong>1,000</strong> requests per minute
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-warning me-2"></i>
                                <strong>10</strong> API keys
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-warning me-2"></i>
                                All REST API endpoints
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-warning me-2"></i>
                                Priority email & chat support
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-warning me-2"></i>
                                Custom rate limits available
                            </li>
                        </ul>
                        
                        <a href="mailto:afsvieira@afsvieira.com?subject=Pro Plan Inquiry" class="btn btn-warning btn-lg w-100">
                            <i class="bi bi-envelope"></i> Contact for Upgrade
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

