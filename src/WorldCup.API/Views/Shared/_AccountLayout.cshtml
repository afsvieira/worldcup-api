@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var layoutModel = ViewData["LayoutModel"] as WorldCup.API.Models.AccountLayoutViewModel 
                      ?? Model as WorldCup.API.Models.AccountLayoutViewModel 
                      ?? new WorldCup.API.Models.AccountLayoutViewModel();
}

<section class="account-section py-5">
    <div class="container py-5">
        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="bi bi-info-circle-fill me-2"></i>
                @TempData["InfoMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <div class="row">
            <!-- Sidebar - Fixed across all account pages -->
            <div class="col-lg-3 mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="avatar bg-primary text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="bi bi-person-fill" style="font-size: 2rem;"></i>
                        </div>
                        <h5 class="fw-bold mb-1">@layoutModel.FullName</h5>
                        <p class="text-muted small mb-3">@layoutModel.Email</p>
                        <span class="badge bg-@(layoutModel.PlanType == "Pro" ? "primary" : layoutModel.PlanType == "Premium" ? "warning" : "success")">
                            @layoutModel.PlanType Plan
                        </span>
                    </div>
                    <div class="list-group list-group-flush">
                        <a asp-controller="Account" asp-action="Profile" 
                           class="list-group-item list-group-item-action @(ViewData["ActivePage"]?.ToString() == "Profile" ? "active" : "")">
                            <i class="bi bi-person me-2"></i> Profile
                        </a>
                        <a asp-controller="Account" asp-action="Security" 
                           class="list-group-item list-group-item-action @(ViewData["ActivePage"]?.ToString() == "Security" ? "active" : "")">
                            <i class="bi bi-shield-lock me-2"></i> Security
                        </a>
                        <a asp-controller="Account" asp-action="ApiKeys" 
                           class="list-group-item list-group-item-action @(ViewData["ActivePage"]?.ToString() == "ApiKeys" ? "active" : "")">
                            <i class="bi bi-key me-2"></i> API Keys
                        </a>
                        <a asp-controller="Account" asp-action="UpgradePlan" 
                           class="list-group-item list-group-item-action @(ViewData["ActivePage"]?.ToString() == "UpgradePlan" ? "active" : "")">
                            <i class="bi bi-rocket-takeoff me-2"></i> Upgrade Plan
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" onclick="event.preventDefault(); document.getElementById('logout-form').submit();" 
                           class="list-group-item list-group-item-action text-danger">
                            <i class="bi bi-box-arrow-right me-2"></i> Logout
                        </a>
                    </div>
                </div>
                
                <!-- Quick Stats Card -->
                <div class="card border-0 shadow-sm mt-3">
                    <div class="card-body">
                        <h6 class="fw-bold mb-3 text-muted small">QUICK STATS</h6>
                        <div class="mb-2">
                            <small class="text-muted">API Keys</small>
                            <div class="progress mt-1" style="height: 6px;">
                                <div class="progress-bar bg-primary" role="progressbar" 
                                     style="width: @(layoutModel.MaxApiKeys > 0 ? (layoutModel.ApiKeyCount * 100 / layoutModel.MaxApiKeys) : 0)%"></div>
                            </div>
                            <small class="text-muted">@layoutModel.ApiKeyCount / @layoutModel.MaxApiKeys</small>
                        </div>
                        <div class="mb-2">
                            <small class="text-muted">Member Since</small>
                            <div class="fw-bold small">@layoutModel.MemberSince.ToString("MMM yyyy")</div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Main Content Area - Rendered by child views -->
            <div class="col-lg-9">
                @RenderBody()
            </div>
        </div>
    </div>
</section>

<!-- Hidden Logout Form -->
<form id="logout-form" asp-controller="Account" asp-action="Logout" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@RenderSection("Scripts", required: false)
