@model WorldCup.API.Models.ApiKeysViewModel

@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewData["Title"] = "API Keys";
    ViewData["ActivePage"] = "ApiKeys";
    
    // Populate the layout model for the sidebar
    ViewData["LayoutModel"] = new WorldCup.API.Models.AccountLayoutViewModel
    {
        Email = Model.Email,
        FirstName = Model.FirstName,
        LastName = Model.LastName,
        PlanType = Model.PlanType.ToString(),
        ApiKeyCount = Model.ApiKeyCount,
        MaxApiKeys = Model.MaxApiKeys,
        MemberSince = Model.MemberSince
    };
}

<!-- Main Content -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-key me-2"></i>My API Keys
        </h5>
        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#createApiKeyModal"
                @(Model.ApiKeyCount >= Model.MaxApiKeys ? "disabled" : "")>
            <i class="bi bi-plus-circle me-1"></i>Create New Key
        </button>
    </div>
    <div class="card-body">
        @if (Model.ApiKeyCount >= Model.MaxApiKeys)
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle me-2"></i>
                You've reached your API key limit (@Model.MaxApiKeys keys). 
                <a asp-action="UpgradePlan" class="alert-link">Upgrade your plan</a> to create more keys.
            </div>
        }

        @if (!Model.ApiKeys.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-key" style="font-size: 3rem; color: #dee2e6;"></i>
                <p class="text-muted mt-3">You don't have any API keys yet.</p>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createApiKeyModal">
                    <i class="bi bi-plus-circle me-1"></i>Create Your First Key
                </button>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Key</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var key in Model.ApiKeys)
                        {
                            <tr>
                                <td>
                                    <strong>@key.Name</strong>
                                </td>
                                <td>
                                    <code class="text-muted">@key.KeyPreview</code>
                                </td>
                                <td>
                                    @if (key.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle me-1"></i>Revoked
                                        </span>
                                    }
                                </td>
                                <td class="text-muted">
                                    <small>@key.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </td>
                                <td class="text-end">
                                    @if (key.IsActive)
                                    {
                                        <form asp-action="RevokeApiKey" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@key.Id" />
                                            <button type="submit" class="btn btn-warning btn-sm" onclick="return confirm('Are you sure you want to revoke this API key? This action cannot be undone.');">
                                                <i class="bi bi-shield-x me-1"></i>Revoke
                                            </button>
                                        </form>
                                    }
                                    <form asp-action="DeleteApiKey" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@key.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this API key? This action cannot be undone.');">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Usage Information Card -->
<div class="card shadow-sm">
    <div class="card-header bg-white">
        <h5 class="mb-0">
            <i class="bi bi-info-circle me-2"></i>API Key Information
        </h5>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <h6 class="fw-bold">Security Best Practices</h6>
                <ul class="small">
                    <li>Never share your API keys publicly</li>
                    <li>Use environment variables to store keys</li>
                    <li>Rotate keys periodically for better security</li>
                    <li>Revoke unused or compromised keys immediately</li>
                </ul>
            </div>
            <div class="col-md-6">
                <h6 class="fw-bold">Your Plan Limits</h6>
                <ul class="small">
                    <li><strong>Maximum API Keys:</strong> @Model.MaxApiKeys</li>
                    <li><strong>Monthly Requests:</strong> @Model.MaxMonthlyRequests.ToString("N0")</li>
                    <li><strong>Rate Limit:</strong> 
                        @(Model.PlanType.ToString() == "Free" ? "10" : Model.PlanType.ToString() == "Premium" ? "100" : "1000") requests/minute
                    </li>
                </ul>
                @if (Model.PlanType.ToString() == "Free")
                {
                    <a asp-action="UpgradePlan" class="btn btn-sm btn-outline-primary mt-2">
                        <i class="bi bi-arrow-up-circle me-1"></i>Upgrade for More
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<!-- Create API Key Modal -->
<div class="modal fade" id="createApiKeyModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-plus-circle me-2"></i>Create New API Key
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CreateApiKey" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="keyName" class="form-label">Key Name</label>
                        <input type="text" class="form-control" id="keyName" name="name" 
                               placeholder="e.g., Production Server" required maxlength="50">
                        <div class="form-text">
                            Give your API key a descriptive name to help you identify it later.
                        </div>
                    </div>
                    <div class="alert alert-info alert-permanent">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Important:</strong> Your API key will be displayed only once after creation. 
                        Make sure to copy it to a safe place.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-key me-1"></i>Create Key
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Show New API Key Modal (if PlainKey exists in TempData) -->
@if (TempData["PlainKey"] != null)
{
    <div class="modal fade" id="newApiKeyModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-check-circle me-2"></i>API Key Created Successfully
                    </h5>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Important:</strong> This is the only time your API key will be displayed. 
                        Copy it now and store it securely.
                    </div>
                    <label class="form-label fw-bold">Your New API Key:</label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" id="plainApiKey" value="@TempData["PlainKey"]" readonly>
                        <button class="btn btn-outline-primary" type="button" onclick="copyApiKey()">
                            <i class="bi bi-clipboard me-1"></i>Copy
                        </button>
                    </div>
                    <div id="copySuccessMessage" class="alert alert-success d-none">
                        <i class="bi bi-check-circle me-2"></i>API key copied to clipboard!
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">
                        I've Copied My Key
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Show the modal automatically
        document.addEventListener('DOMContentLoaded', function() {
            var modal = new bootstrap.Modal(document.getElementById('newApiKeyModal'));
            modal.show();
        });

        // Copy API key to clipboard
        function copyApiKey() {
            var apiKeyInput = document.getElementById('plainApiKey');
            apiKeyInput.select();
            apiKeyInput.setSelectionRange(0, 99999); // For mobile devices
            
            navigator.clipboard.writeText(apiKeyInput.value).then(function() {
                document.getElementById('copySuccessMessage').classList.remove('d-none');
                setTimeout(function() {
                    document.getElementById('copySuccessMessage').classList.add('d-none');
                }, 3000);
            });
        }
    </script>
}
