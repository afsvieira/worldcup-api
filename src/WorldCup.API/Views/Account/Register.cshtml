@model WorldCup.API.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<section class="register-section py-5">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <i class="bi bi-person-plus-fill text-primary" style="font-size: 3rem;"></i>
                            <h2 class="fw-bold mt-3">Create Account</h2>
                            <p class="text-muted">Get started with a free account</p>
                        </div>
                        
                        <form asp-controller="Account" asp-action="Register" method="post">
                            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                            {
                                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                            }
                            
                            <div class="mb-3">
                                <label asp-for="FirstName" class="form-label fw-bold">
                                    <i class="bi bi-person"></i> First Name
                                </label>
                                <input asp-for="FirstName" class="form-control form-control-lg" placeholder="John" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="LastName" class="form-label fw-bold">
                                    <i class="bi bi-person"></i> Last Name
                                </label>
                                <input asp-for="LastName" class="form-control form-control-lg" placeholder="Doe" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label fw-bold">
                                    <i class="bi bi-envelope"></i> Email Address
                                </label>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="your@email.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                                <small class="form-text text-muted">Your email will be used as your username</small>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label fw-bold">
                                    <i class="bi bi-lock"></i> Password
                                </label>
                                <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter password" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                                <small class="form-text text-muted">Minimum 6 characters</small>
                            </div>
                            
                            <div class="mb-4">
                                <label asp-for="ConfirmPassword" class="form-label fw-bold">
                                    <i class="bi bi-lock-fill"></i> Confirm Password
                                </label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Confirm password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                            
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="agreeTerms" required />
                                <label class="form-check-label small" for="agreeTerms">
                                    I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>
                                </label>
                            </div>
                            
                            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                                <i class="bi bi-person-plus"></i> Create Account
                            </button>
                            
                            <div class="text-center">
                                <p class="text-muted mb-0">
                                    Already have an account? 
                                    <a asp-controller="Account" asp-action="Login" class="fw-bold">Sign In</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Benefits -->
                <div class="card border-0 bg-light mt-4">
                    <div class="card-body p-4">
                        <h6 class="fw-bold mb-3">What you'll get with your free account:</h6>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                500 API requests per day
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                Access to REST API endpoints
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                Comprehensive documentation
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                Community support
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
